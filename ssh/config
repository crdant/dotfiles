HashKnownHosts yes

Host *
  ControlMaster auto
  ControlPath ~/.ssh/master-%r@%h:%p
  AddKeysToAgent yes
  UseKeychain yes
  IdentityFile ~/.ssh/id_ed25519
  PasswordAuthentication no

Host *.os.shortrib.net
  User Administrator

Host opsman.*
  PasswordAuthentication yes

Host manager.*
  PasswordAuthentication yes

Host utility.arm.crdant.io
  IdentityFile ~/.ssh/id_rsa

Host tormore
  User pi

Host router.lab.shortrib.net exit.crdant.net
  User arceus
  IdentityFile ~/.ssh/id_router

Host unifi.crdant.net
  User arceus
  IdentityFile ~/.ssh/id_unifi

Host rye.lab.shortrib.net bourbon.lab.shortrib.net scotch.lab.shortrib.net potstill.lab.shortrib.net malt.lab.shortrib.net vcenter.lab.shortrib.net
  User root
  IdentityFile ~/.ssh/id_homelab

Host haproxy.lab.shortrib.net
  User root
  PubkeyAuthentication no
  PasswordAuthentication yes

Host storage.lab.shortrib.net
  User arceus

Host gitlab.com
  IdentityFile ~/.ssh/id_rsa_gitlab.com

Host *
  User crdant
